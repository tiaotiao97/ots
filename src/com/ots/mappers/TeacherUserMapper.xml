<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ots.dao.TeacherInfoDao" >


    <!-- 查询用户 -->

    
    <insert id="insert" parameterType="TeacherInfo">
    	insert into teacher_info(userid,realname,idcardnum,bankCardNo,avatar)
    	values(#{userId},#{realName},#{idCardNum},#{bankCardNo},#{avatar})
    </insert>

    <select id="selectOne" parameterType="TeacherInfo" resultType="TeacherInfo">
        select *
        from teacher_info
        where 1=1

        <if test="userId != null" >
            and userid = #{userId}
        </if>

        <if test="idCardNum != null" >
            and idCardNum = #{idCardNum}
        </if>

    </select>

